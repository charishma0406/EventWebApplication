@model WebMVC.Models.Event

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Venue
            </th>
            <th>
                Age
            </th>
            <th>
                Day
            </th>
            <th>
                Occupancy
            </th>
            <th>
                Picture
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Venue
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @item.Day
            </td>
            <td>
                @item.Occupancy
            </td>
            <td>
                <img src="@item.PictureUrl" />
            </td>
        </tr>
}
    </tbody>
</table>
